LOCATION=`~/.dotfiles/bin/get_network_location.pl`
echo Location: $LOCATION
if [ "$LOCATION" = "NZX" ]; then
   echo Setting proxies...
   # Proxy settings for NZX - note also need corkscrew to make git (and mac ports?) play nicely
   PROXY_HOST=proxy.nzx.com
   PROXY_PORT=3128
   PROXY_HOST_PORT=$PROXY_HOST:$PROXY_PORT
   export HTTP_PROXY=http://$PROXY_HOST_PORT
   export http_proxy=$HTTP_PROXY
   # RSYNC_PROXY lets macports get to the internet
   export RSYNC_PROXY=$PROXY_HOST_PORT
else
   echo Not setting proxies...
   unset http_proxy
   unset HTTP_PROXY
   unset RSYNC_PROXY
fi

echo http_proxy: $http_proxy HTTP_PROXY: $HTTP_PROXY RSYNC_PROXY: $RSYNC_PROXY
